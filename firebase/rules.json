{
  "rules": {
    "users": {
      ".write": "auth !== null",
      ".read": "auth !== null",
      "$uid": {
        ".write": "auth !== null && auth.uid === $uid",
        ".read": "auth !== null",
        "rsa": {
          ".write": "auth !== null && auth.uid === $uid",
          ".read": "auth !== null"
        },
        "pending_requests": {
          ".write": "auth !== null && auth.uid === $uid",
          ".read": "auth !== null && auth.uid === $uid",
          "$uid2": {
            ".write": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)",
            ".read": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)"
          }
        }
      }
    },
    "conversations": {
      "$uid": {
        "$uid2": {
          ".write": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)",
          ".read": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)"
        }
      }
    }
  }
}