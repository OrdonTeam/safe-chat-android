{
  "rules": {
    "conversations": {
      "$uid": {
        "$uid2": {
          ".write": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)",
          ".read": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)"
        }
      }
    },
    "pending_request": {
      "$uid": {
        "$uid2": {
          ".write": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)",
          ".read": "auth !== null && (auth.uid === $uid || auth.uid === $uid2)"
        }
      }
    },
    "users": {
      "$uid": {
        ".write": "auth !== null && auth.uid === $uid",
        ".read": "auth !== null"
      }
    }
  }
}